package com.ssafy.ws.step3;

/**
 * 직각삼각형 모양의 숫자 출력하는 클래스
 */
public class DigitTest1 {

	public static void main(String[] args) {
		int a=5;
		int chk=a;
		
		StringBuilder sb = new StringBuilder();
		for(int i=1;i<=15;i++) {
			
			if(i>=10) System.out.print(i+" ");
			else System.out.print(i+" ");
			
			chk--;
			if(chk==0) {
				a-=1;
				chk=a;
				System.out.println();
				
				for(int j=0;j<5-a;j++) {
					System.out.print("  ");
				}
			}
			
			
		}
	}

}
